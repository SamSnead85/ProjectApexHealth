{
  "name": "project-apex",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "vite",
    "dev:web": "vite",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:ai": "cd apps/ai-services && uvicorn app.main:app --reload --port 8000",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:api\" \"npm run dev:ai\"",
    "build": "tsc -b && vite build",
    "build:api": "npm run build --workspace=apps/api",
    "lint": "eslint .",
    "preview": "vite preview",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:seed": "npm run db:seed --workspace=apps/api",
    "test": "vitest run",
    "test:api": "npm test --workspace=apps/api",
    "setup": "npm install && npm run docker:up && echo '⏳ Waiting for services...' && sleep 10 && npm run db:seed && echo '✅ Setup complete! Run npm run dev:all'"
  },
  "dependencies": {
    "@google/genai": "^0.5.0",
    "@google/generative-ai": "^0.24.1",
    "@xyflow/react": "^12.0.0",
    "date-fns": "^3.0.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.330.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.0",
    "recharts": "^2.12.0",
    "uuid": "^9.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.5.0",
    "vite": "^5.4.0"
  }
}
