# ═══════════════════════════════════════════════════════
# Project Apex - Complete Health Platform
# Environment Configuration
# Copy to .env and update values for your environment
# ═══════════════════════════════════════════════════════

# ─── Application ────────────────────────────────────
NODE_ENV=development
API_PORT=3000
API_BASE_URL=http://localhost:3000
WEB_URL=http://localhost:4200

# ─── Database (PostgreSQL) ──────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=apex_admin
DB_PASSWORD=apex_dev_password_2024
DB_DATABASE=apex_health
DB_SSL=false
DB_LOGGING=true

# ─── Redis ──────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=apex_redis_dev

# ─── Keycloak (Auth) ───────────────────────────────
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=apex-health
KEYCLOAK_CLIENT_ID=apex-api
KEYCLOAK_CLIENT_SECRET=change-me-in-production
KEYCLOAK_ADMIN_PASSWORD=apex_kc_admin

# ─── JWT (Fallback / API Keys) ─────────────────────
JWT_SECRET=change-this-to-a-very-long-random-string-in-production
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# ─── MinIO (Object Storage) ────────────────────────
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=apex_minio_admin
MINIO_ROOT_PASSWORD=apex_minio_secret
MINIO_USE_SSL=false
MINIO_BUCKET_DOCUMENTS=apex-documents
MINIO_BUCKET_EXPORTS=apex-exports

# ─── Elasticsearch ─────────────────────────────────
ELASTICSEARCH_NODE=http://localhost:9200

# ─── AI Services ───────────────────────────────────
VITE_GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
AI_SERVICES_URL=http://localhost:8000

# ─── Voice Agent (Deepgram + ElevenLabs) ──────────
DEEPGRAM_API_KEY=your-deepgram-key
ELEVENLABS_API_KEY=your-elevenlabs-key

# ─── Encryption (HIPAA PHI at rest) ───────────────
PHI_ENCRYPTION_KEY=generate-a-256-bit-key-for-production
PHI_ENCRYPTION_ALGORITHM=aes-256-gcm

# ─── HIPAA Audit ───────────────────────────────────
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true

# ─── Email / SMS ───────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@apexhealth.com
SMTP_PASSWORD=your-smtp-password
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_FROM_NUMBER=+1234567890

# ─── EDI / Clearinghouse ──────────────────────────
EDI_CLEARINGHOUSE_URL=https://api.clearinghouse.example.com
EDI_SENDER_ID=YOUR_SENDER_ID
EDI_RECEIVER_ID=YOUR_RECEIVER_ID

# ─── FHIR ─────────────────────────────────────────
FHIR_BASE_URL=http://localhost:3000/api/v1/fhir
FHIR_VERSION=R4

# ─── Frontend (Vite) ─────────────────────────────
VITE_API_BASE_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000/ws

# ─── LangSmith Observability ─────────────────────
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=apex-health-ai
